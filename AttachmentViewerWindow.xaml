<Window x:Class="CSharpResaleBusinessTracker.AttachmentViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CSharpResaleBusinessTracker"
        Title="Attachments" Height="450" Width="800">

    <Window.Resources>
        <local:SafeImageConverter1 x:Key="SafeImageConverter1" />
        <local:NonImageVisibilityConverter x:Key="NonImageVisibilityConverter" />
    </Window.Resources>

    <ScrollViewer>
        <ItemsControl x:Name="AttachmentsPanel" Margin="20">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,0,5"/>

                            <!-- Try to render image -->
                            <Image Source="{Binding FullName, Converter={StaticResource SafeImageConverter1}}" Height="100" Stretch="Uniform" />

                            <!-- Label for PDFs or unknowns -->
                            <TextBlock Text="(Preview unavailable)" Foreground="Gray" FontStyle="Italic" Visibility="{Binding FullName, Converter={StaticResource NonImageVisibilityConverter}}" />

                            <Button Content="Open" Click="OpenFile_Click" Tag="{Binding FullName}" Margin="0,5,0,0"/>
                            <Button Content="Delete" Click="DeleteFile_Click" Tag="{Binding FullName}" Background="IndianRed" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>
