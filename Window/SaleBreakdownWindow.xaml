<Window x:Class="CSharpResaleBusinessTracker.SaleBreakdownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpResaleBusinessTracker"
        mc:Ignorable="d"
        Title="Sale Breakdown" Height="200" Width="400">
    <StackPanel Margin="20">
        <TextBlock x:Name="NetTextBlock" FontWeight="Bold" FontSize="16" Margin="0,10,0,5" />
        <TextBlock x:Name="ReinvestTextBlock" FontWeight="Bold" FontSize="14" Margin="0 5"/>
        <TextBlock x:Name="PocketTextBlock" FontWeight="Bold" FontSize="14" Margin="0 5"/>
        <TextBlock x:Name="EmergencyTextBlock" FontWeight="Bold" FontSize="14" Margin="0 5"/>
        <Button Content="OK" Click="Close_Click" Width="60" HorizontalAlignment="Center" Margin="0 10"/>
    </StackPanel>
</Window>
