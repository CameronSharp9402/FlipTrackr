<Window x:Class="CSharpResaleBusinessTracker.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpResaleBusinessTracker"
        mc:Ignorable="d"
        Title="About" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >

            <TextBlock Text="FlipTrackr" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock Text="Version 1.0.0" FontSize="14" Foreground="Gray" TextAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="FlipTrackr is a powerful inventory and profit tracking tool built specifically for online resellers. Track inventory, expenses, revenue, ROI, and generate insights through modern charts and dashboards." 
                       TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Developed by Cameron — a passionate computer science student and full-time reseller who enjoys building tools that solve real problems." 
                       TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="GitHub:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock>
                <Hyperlink NavigateUri="https://github.com/CameronSharp9402" RequestNavigate="Hyperlink_RequestNavigate">
                    https://github.com/CameronSharp9402
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
