<Window x:Class="CSharpResaleBusinessTracker.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="ROI Threshold (%)" Margin="0 0 0 10"/>
        <TextBox x:Name="RoiThreshold" Width="100" Margin="0 0 0 10"/>
        <Button Content="Save Changes" Click="SaveButton_Click"/>
    </StackPanel>
</Window>
