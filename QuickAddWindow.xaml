<Window x:Class="CSharpResaleBusinessTracker.QuickAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpResaleBusinessTracker"
        mc:Ignorable="d"
        Title="QuickAddWindow"
        Height="480" Width="720"
        MinWidth="720" MinHeight="480"
        MaxWidth="1920" MaxHeight="1080"
        ResizeMode="CanResize">

    <StackPanel Margin="10" Orientation="Vertical">
        
        <WrapPanel Margin="0 10">
            <ComboBox x:Name="MarketplaceComboBox" Width="150" SelectedIndex="0"/>
        </WrapPanel>

        <WrapPanel Margin="0 10">
            <ComboBox x:Name="CategoryComboBox" Width="150" SelectedIndex="0"/>
        </WrapPanel>

        <WrapPanel Margin="0 10">
            <ComboBox x:Name="StageComboBox" Width="150" SelectedIndex="0"/>
        </WrapPanel>
        
        <WrapPanel Margin="0 10">
            <TextBlock Text="Item Name:" Margin="0 0 5 0" VerticalAlignment="Center"/>
            <TextBox x:Name="ItemNameBox" Width="200"/>
        </WrapPanel>

        <WrapPanel Margin="0 10">
            <TextBlock Text="Purchase Price:" Margin="0 0 5 0" VerticalAlignment="Center"/>
            <TextBox x:Name="PurchasePriceBox" Width="100"/>
        </WrapPanel>

        <WrapPanel Margin="0 10">
            <TextBlock Text="Selling Price:" Margin="0 0 5 0" VerticalAlignment="Center"/>
            <TextBox x:Name="SellingPriceBox" Width="100"/>
        </WrapPanel>

        <WrapPanel Margin="0 10">
            <TextBlock Text="SKU:" Margin="0 0 5 0" VerticalAlignment="Center"/>
            <TextBox x:Name="SkuBox" Width="150"/>
        </WrapPanel>

        <WrapPanel Margin="0 10">
            <TextBlock Text="Purchase Date:" Margin="0 0 5 0" VerticalAlignment="Center"/>
            <DatePicker x:Name="DatePurchasedPicker" Width="150"/>
        </WrapPanel>

        <WrapPanel Margin="0 10">
            <TextBlock Text="Quantity:" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <TextBox x:Name="QuantityBox" Width="50" Text="1"/>
        </WrapPanel>

        <Button Content="Add Items" Click="AddItems_Click" Width="150" Height="35" Margin="0 10 0 0" HorizontalAlignment="Center"/>

    </StackPanel>
</Window>
